<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="maven.maven_pjt.biz.users.UsersMapper">
    <select id="getUserById" resultType="maven.maven_pjt.biz.users.entity.Users" parameterType="Integer">
        SELECT
            *
        FROM
            USERS
        WHERE
            id = #{userId};
    </select>
    <select id="findAllUsers" resultType="hashmap">
        SELECT
            id,
            name,
            email,
            department,
            rank_name,
            start_date
        FROM
            USERS;
    </select>
    <select id="getUserDetail" resultType="maven.maven_pjt.biz.users.dto.UsersInfoDto" parameterType="Integer">
        SELECT
            id,
            name,
            email,
            department,
            rank_name,
            start_date,
            last_change_date
        FROM
            USERS
        WHERE
            id = #{userId};
    </select>
    <select id="updateUser" resultType="maven.maven_pjt.biz.users.dto.UsersInfoDto" parameterType="maven.maven_pjt.biz.users.dto.UpdateUserDto">
        UPDATE
            USERS
        SET
            name = #{name},
            email = #{email},
            password = #{password},
            department = #{department},
            rank_name = #{rankName},
            last_change_date = NOW()
        WHERE
            id = #{id};
    </select>
    <select id="deleteUser" resultType="Integer" parameterType="Integer">
        DELETE FROM
            USERS
        WHERE
            id = #{userId};
    </select>
    <select id="signUpUser" parameterType="maven.maven_pjt.biz.users.dto.UserSignUpDto">
        INSERT INTO
            USERS
        VALUES
            (#{id}, #{name}, #{email}, #{userId}, #{password}, #{department}, #{rankName}, NOW(), NOW(), FALSE);
    </select>
    <select id="getLastUserId" resultType="Integer">
        SELECT
            id
        FROM
            USERS
        ORDER BY
            id DESC
        LIMIT 1;
    </select>
    <select id="getUserByUserId" parameterType="String" resultType="maven.maven_pjt.biz.users.dto.UsersInfoDto">
        SELECT
            id,
            name,
            email,
            department,
            rank_name,
            start_date,
            last_change_date
        FROM
            USERS
        WHERE
            user_id = #{userId};
    </select>
</mapper>